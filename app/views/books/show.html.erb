<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<h2>User Info</h2>
<%= attachment_image_tag @user, :profile_image, width: "10%" %>
<h4>name</h4><%= @user.name %>
<h4>introduction</h4><%= @user.introduction %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "profile-edit", edit_user_path(@user) %></p>
  <% end %>


<h2>Book detail</h2>
  <%= attachment_image_tag @user, :profile_image, width: "5%" %>
  <%= @user.name %>
  <%= @book.title %>
  <%= @book.body %>

<%= link_to 'Edit', edit_book_path(@book) %>
<%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' } %>


<h1>New book</h1>

<%= form_for(@booknew) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create Book' %>
 
<% end %>

