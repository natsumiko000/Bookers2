<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@book.errors.count, "error") %></h2>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
     </div>
  </div>

  <div class="row">
    <div class="col-md-3">

      <h2>User Info</h2>
      <%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
      <table class="table table-responsive">
        <thead>
          <tr>
            <th>name</th>
            <th scope="col"><%= @user.name %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <p>
        <%= link_to edit_user_path(@user), class: "btn btn-primary w-100" do %>
          <i class="fas fa-wrench"></i>
        <% end %>
      </p>


      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :opinion %>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-9">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Option</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

