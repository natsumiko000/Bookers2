<h2>User Info</h2>
<%= attachment_image_tag @user, :profile_image, width: "10%" %>
<h4>name</h4><%= @user.name %>
<h4>introduction</h4><%= @user.introduction %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "profile-edit", edit_user_path(@user) %></p>
  <% end %>

<table>
  <thead>
    <tr>
      <th>      </th>
      <th>Title</th>
      <th>Option</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, width: "5%" %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>New book</h1>

<%= form_for(@book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create Book' %>
 
<% end %>