<div class="container">
  <div class="row">
    <div class="col-md-3">

      <h2>User Info</h2>
      <%= attachment_image_tag @user, :profile_image, width: "10%" %>
      <h4>name</h4><%= @user.name %>
      <h4>introduction</h4><%= @user.introduction %>
        <% if @user.id == current_user.id %>
          <p><%= link_to "profile-edit", edit_user_path(@user) %></p>
        <% end %>

      <h1>New book</h1>
      <%= form_for(@book) do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class="col-md-9">
      <h2>Users</h2>
      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>      </th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
            	 <td><%= attachment_image_tag user, :profile_image, width: "5%" %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'show', user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>