<div class="container">
  <div class="row">
    <div class="col-xs-3">

      <h2>User Info</h2>
      <div class="mb-2"><%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></div>
      <table class="table table-responsive">
        <thead>
          <tr>
            <th>name</th>
            <th scope="col"><%= @user.name %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <p>
        <%= link_to edit_user_path(@user), class: "btn btn-primary w-100" do %>
          <i class="fas fa-wrench"></i>
        <% end %>
      </p>


      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :opinion %>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-9">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
            	 <td><%= attachment_image_tag user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>