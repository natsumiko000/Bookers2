<div class="container">
  <div class="row">
    <div class="col-md-3">

      <h2>User Info</h2>
      <%= attachment_image_tag @user, :profile_image, width: "10%" %>
      <table class="table">
        <thead>
          <tr>
            <th>name</th>
            <th scope="col"><%= @user.name %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <% if @user.id == current_user.id %>
        <p><%= link_to "profile-edit", edit_user_path(@user) %></p>
      <% end %>


      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :opinion %>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-9">
      <h2>Users</h2>
      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>      </th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
            	 <td><%= attachment_image_tag user, :profile_image, width: "5%" %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'show', user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>