<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
     </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <h2>User Info</h2>
      <div class="mb-2"><%= attachment_image_tag @me, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></div>
      <table class="table table-responsive">
        <thead>
          <tr>
            <th>name</th>
            <th scope="col"><%= @me.name %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">introduction</th>
            <td><%= @me.introduction %></td>
          </tr>
        </tbody>
      </table>
      <p>
        <%= link_to edit_user_path(@me), class: "btn btn-primary w-100" do %>
          <i class="fas fa-wrench"></i>
        <% end %>
      </p>


      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :opinion %>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>

    <div class="col-md-9">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Option</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td><%= link_to 'Edit', edit_book_path(book) %></td>
              <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


